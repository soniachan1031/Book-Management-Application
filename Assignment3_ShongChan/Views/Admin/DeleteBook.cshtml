@model Book
@{
    ViewBag.Title = "Delete Book";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Book</h2>

    @if (ViewBag.Warning != null)
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Warning</h4>
            <p>@ViewBag.Warning</p>
            <hr />
            <div>
                <a href="@ViewBag.UnassignBook" class="btn btn-primary">Go to Unassign Page</a>
                <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h3>Are you sure you want to delete this book?</h3>
            <ul class="list-unstyled">
                <li><strong>Title:</strong> @Model.Title</li>
                <li><strong>Author:</strong> @Model.Author</li>
                <li><strong>Genre:</strong> @(Model.Genre != null ? Model.Genre.Name : "No Genre")</li>
                <li><strong>Year:</strong> @Model.Year</li>
                <li><strong>Quantity:</strong> @Model.Quantity</li>
                <li><strong>Available Quantity:</strong> @Model.AvailableQuantity</li>
            </ul>
        </div>

        <form asp-action="DeleteBook" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    }
</div>
