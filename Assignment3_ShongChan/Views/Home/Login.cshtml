@model User
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    @if (TempData["SessionExpired"] != null)
    {
        <div class="alert alert-warning text-center fw-bold">
            <span class="fas fa-exclamation-triangle"></span> @TempData["SessionExpired"]
        </div>
    }

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg bg-white text-dark">
                    <div class="card-header bg-info text-white">
                        <h2 class="text-center">Login Form</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label asp-for="Username" class="form-label fw-bold">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit"class="btn btn-outline-info mt-4 w-100">Login</button>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a asp-action="Register" class="text-decoration-none">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
